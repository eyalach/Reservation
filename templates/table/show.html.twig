{% block title %}Table{% endblock %}

{% block body %}
    <h1>Table</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ table.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ table.numero }}</td>
            </tr>
            <tr>
                <th>Nb_places</th>
                <td>{{ table.nbPlaces }}</td>
            </tr>
            <tr>
                <th>Estlibre</th>
