{# templates/default/index1.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Restaurant Le Délice – Réservation & Commande en ligne{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6 text-center text-lg-start">
                <h1 class="display-3 fw-bold text-primary mb-4">
                    Bienvenue au<br><span class="text-dark">Restaurant Le Délice</span>
                </h1>
                <p class="lead mb-5">
                    Réservez votre table ou commandez en ligne<br>quelques clics. Rapide, simple, délicieux !
                </p>

                <div class="d-grid d-md-flex gap-3 justify-content-center justify-content-lg-start">
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg px-5">
                        Me connecter
                    </a>

                    {# BOUTON S’INSCRIRE AJOUTÉ ICI #}
                    <a href="{{ path('app_register') }}" class="btn btn-success btn-lg px-5">
                        S’inscrire
                    </a>

                    <a href="{{ path('app_client_reserver_table') }}" class="btn btn-outline-dark btn-lg px-5 mt-3 mt-md-0">
                        Réserver une table
                    </a>
                </div>
            </div>

            <div class="col-lg-6 text-center mt-5 mt-lg-0">
                <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=800"
                     alt="Restaurant"
                     class="img-fluid rounded shadow-lg"
                     style="max-height: 500px; object-fit: cover;">
            </div>
        </div>

        <div class="row text-center mt-5 py-5 bg-light rounded">
            <div class="col-md-4 mb-4">
                <i class="fas fa-utensils fa-3x text-primary mb-3"></i>
                <h4>Cuisine maison</h4>
                <p>Produits frais & recettes traditionnelles</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-clock fa-3x text-primary mb-3"></i>
                <h4>Réservation rapide</h4>
                <p>Choisissez votre date et heure en 30 secondes</p>
            </div>
            <div class="col-md-4 mb-4">
                <i class="fas fa-mobile-alt fa-3x text-primary mb-3"></i>
                <h4>Commande en ligne</h4>
                <p>À emporter ou en livraison</p>
            </div>
        </div>
    </div>
{% endblock %}
