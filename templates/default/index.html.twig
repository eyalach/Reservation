{# templates/default/index1.html.twig #}
{% extends 'base.html.twig' %}


{% block title %}Restaurant Sapori di Sicilia – Réservation & Commande en ligne{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}

    <div class="container-fluid py-5" style="background: #FAF9F6; min-height: 100vh;">
        <div class="container">
            <div class="row align-items-center min-vh-100 gy-5">
                <div class="col-lg-6 text-center text-lg-start">
                    <h1 class="display-3 fw-light mb-4" style="font-family: 'Playfair Display', serif; line-height: 1.2;">
                        Bienvenue au<br>
                        <span class="fw-bold text-terracotta"> Sapori di Sicilia</span>
                    </h1>
                    <p class="lead mb-5 text-muted" style="font-family: 'Montserrat', sans-serif;">
                        Réservez votre table ou commandez en ligne en quelques clics.<br>
                        Une cuisine italienne authentique, raffinée et savoureuse.
                    </p>
                    <div class="d-grid d-md-flex gap-3 justify-content-center justify-content-lg-start">
                        <a href="{{ path('app_login') }}" class="btn btn-outline-terracotta btn-lg px-5">Me connecter</a>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-terracotta btn-lg px-5">S’inscrire</a>
                        <a href="{{ path('app_client_reserver_table') }}" class="btn btn-terracotta btn-lg px-5">Réserver une table</a>
                    </div>
                </div>
                <div class="col-lg-6 text-center">
                    <img src="https://media.architecturaldigest.com/photos/66bb59d4cf57c1cad733e7ef/master/w_1600%2Cc_limit/Marisi_Bar_edits-Dec2022_KimberlyMotos-2.jpg"
                         alt="Intérieur élégant du Restaurant Sapori di Sicilia"
                         class="img-fluid rounded-5 shadow-lg"
                         style="max-height: 650px; object-fit: cover;">
                </div>
            </div>

            <div class="row text-center mt-5 py-5 g-5">
                <div class="col-md-4">
                    <div class="feature-card p-5 h-100 text-center shadow-sm">
                        <img src="https://www.cellartours.com/wp-content/uploads/2011/12/ten-best-pasta-dishes-ever-e1613226617930.jpg"
                             alt="Cuisine maison italienne" class="mb-4 rounded-4" style="width: 120px; height: 120px; object-fit: cover;">
                        <h4 class="fw-semibold" style="font-family: 'Playfair Display', serif;">Cuisine authentique</h4>
                        <p class="text-muted" style="font-family: 'Montserrat', sans-serif;">Produits frais & recettes italiennes traditionnelles</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card p-5 h-100 text-center shadow-sm">
                        <img src="https://images.squarespace-cdn.com/content/v1/5929f7371e5b6ca26e339500/1714765037988-VNMV4AAFHTIIX4J0U80B/main+dining+-+closeup+FAV.jpg?format=1000w"
                             alt="Réservation rapide" class="mb-4 rounded-4" style="width: 120px; height: 120px; object-fit: cover;">
                        <h4 class="fw-semibold" style="font-family: 'Playfair Display', serif;">Réservation facile</h4>
                        <p class="text-muted" style="font-family: 'Montserrat', sans-serif;">Choisissez votre date et heure en quelques secondes</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card p-5 h-100 text-center shadow-sm">
                        <img src="https://blog.garciadepou.com/wp-content/uploads/2018/11/Cajas-pizza-habana-AMBIENT.jpg"
                             alt="Commande en ligne" class="mb-4 rounded-4" style="width: 120px; height: 120px; object-fit: cover;">
                        <h4 class="fw-semibold" style="font-family: 'Playfair Display', serif;">Commande à emporter</h4>
                        <p class="text-muted" style="font-family: 'Montserrat', sans-serif;">Livraison ou retrait – toujours délicieux</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --terracotta: #C14A3A; /* Rouge terracotta chaud italien */
            --olive: #6B8E23; /* Vert olive subtil */
            --gold: #D4AF37; /* Or doux pour accents chic */
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6; /* Crème clair, élégant et moderne */
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .text-terracotta { color: var(--terracotta); }

        .btn-terracotta {
            background: var(--terracotta);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-terracotta:hover {
            background: #a83a2b;
            transform: translateY(-2px);
        }

        .btn-outline-terracotta {
            border: 2px solid var(--terracotta);
            color: var(--terracotta);
            transition: all 0.3s ease;
        }
        .btn-outline-terracotta:hover {
            background: var(--terracotta);
            color: white;
        }

        .feature-card {
            background: white;
            border-radius: 20px;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }
        .feature-card:hover {
            transform: translateY(-12px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.08);
        }

        .rounded-5 { border-radius: 1.5rem; }

        @media (max-width: 992px) {
            .display-3 { font-size: 4rem; }
        }
        @media (max-width: 768px) {
            .display-3 { font-size: 3rem; }
        }
    </style>
{% endblock %}
