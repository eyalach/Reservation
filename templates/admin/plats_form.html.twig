{# templates/admin/plats_form.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ plat.id ? 'Modifier le plat' : 'Ajouter un nouveau plat' }}{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100 d-flex align-items-center py-5"
         style="background: linear-gradient(rgba(250, 249, 246, 0.94), rgba(250, 249, 246, 0.94)),
            url('https://media.architecturaldigest.com/photos/66bb59d4cf57c1cad733e7ef/master/w_1600%2Cc_limit/Marisi_Bar_edits-Dec2022_KimberlyMotos-2.jpg') center/cover no-repeat;
            background-attachment: fixed;">
        <div class="container">
            <div class="text-start mb-4">
                <a href="{{ path('app_admin_plats') }}" class="btn btn-outline-terracotta px-4 py-2">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste des plats
                </a>
            </div>

            <div class="row justify-content-center">
                <!-- Formulaire large pour plus de confort -->
                <div class="col-md-11 col-lg-10 col-xl-9">
                    <div class="card shadow-lg border-0 rounded-5 overflow-hidden">
                        <div class="card-header text-white text-center py-4" style="background: var(--terracotta);">
                            <i class="bi bi-journal-text fs-2 me-2"></i>
                            <h2 class="h4 mb-0 fw-medium" style="font-family: 'Playfair Display', serif;">
                                {{ plat.id ? 'Modifier le plat' : 'Nouveau Plat' }}
                            </h2>
                        </div>

                        <div class="card-body p-5">
                            <p class="text-center text-muted mb-5" style="font-family: 'Montserrat', sans-serif;">
                                Gestion du Menu
                            </p>

                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                            <div class="mb-4">
                                {{ form_label(form.nom, 'Nom du plat *', {'label_attr': {'class': 'form-label fw-medium text-muted'}}) }}
                                {{ form_widget(form.nom, {
                                    'attr': {
                                        'class': 'form-control form-control-lg rounded-4',
                                        'placeholder': 'Ex : Risotto aux champignons'
                                    }
                                }) }}
                                <div class="text-danger small mt-1">{{ form_errors(form.nom) }}</div>
                            </div>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    {{ form_label(form.prix, 'Prix (DT) *', {'label_attr': {'class': 'form-label fw-medium text-muted'}}) }}
                                    {{ form_widget(form.prix, {
                                        'attr': {
                                            'class': 'form-control form-control-lg rounded-4',
                                            'step': '0.01',
                                            'placeholder': '12.50'
                                        }
                                    }) }}
                                    <div class="text-danger small mt-1">{{ form_errors(form.prix) }}</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label fw-medium text-muted">Statut</label>
                                    <div class="form-check form-switch mt-3">
                                        {{ form_widget(form.disponible, {'attr': {'class': 'form-check-input'}}) }}
                                        {{ form_label(form.disponible, 'Disponible à la carte', {'label_attr': {'class': 'form-check-label ms-3'}}) }}
                                    </div>
                                    <div class="text-danger small mt-1">{{ form_errors(form.disponible) }}</div>
                                </div>
                            </div>

                            <div class="mb-4 mt-4">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-medium text-muted'}}) }}
                                {{ form_widget(form.description, {
                                    'attr': {
                                        'class': 'form-control form-control-lg rounded-4',
                                        'rows': 6,
                                        'placeholder': 'Décrivez les ingrédients, la préparation, les saveurs...'
                                    }
                                }) }}
                                <div class="text-danger small mt-1">{{ form_errors(form.description) }}</div>
                            </div>

                            {% if form.imageFile is defined %}
                                <div class="mb-4">
                                    {{ form_label(form.imageFile, 'Photo du plat', {'label_attr': {'class': 'form-label fw-medium text-muted'}}) }}
                                    {{ form_widget(form.imageFile, {'attr': {'class': 'form-control form-control-lg rounded-4', 'accept': 'image/*'}}) }}
                                    <small class="text-muted d-block mt-2">JPG, PNG, WebP – Max 5 Mo recommandé</small>

                                    {% if plat.imageName ?? false %}
                                        <div class="mt-4">
                                            <p class="fw-semibold text-muted small text-uppercase mb-3">Image actuelle</p>
                                            <img src="{{ asset('uploads/plats/' ~ plat.imageName) }}"
                                                 alt="{{ plat.nom }}"
                                                 class="img-fluid rounded-4 shadow-sm"
                                                 style="max-height: 400px; object-fit: cover;">
                                        </div>
                                    {% endif %}
                                </div>
                            {% endif %}

                            {# Boutons de même taille #}
                            <div class="d-flex gap-3 justify-content-end mt-5">
                                <a href="{{ path('app_admin_plats') }}"
                                   class="btn btn-outline-terracotta btn-lg flex-fill py-3 shadow-sm">
                                    Annuler
                                </a>
                                <button type="submit" class="btn btn-terracotta btn-lg flex-fill py-3 shadow-sm">
                                    <i class="bi bi-check-circle me-2"></i>
                                    {{ plat.id ? 'Enregistrer les modifications' : 'Ajouter le plat' }}
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .btn-terracotta {
            background: var(--terracotta);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-terracotta:hover {
            background: #a83a2b;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .btn-outline-terracotta {
            border: 2px solid var(--terracotta);
            color: var(--terracotta);
            transition: all 0.3s ease;
        }
        .btn-outline-terracotta:hover {
            background: var(--terracotta);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .card {
            background: white;
            transition: transform 0.4s ease;
        }
        .card:hover {
            transform: translateY(-8px);
        }

        .form-control {
            border: 1px solid #ddd;
            padding: 0.8rem 1rem;
        }
        .form-control:focus {
            border-color: var(--terracotta);
            box-shadow: 0 0 0 0.2rem rgba(193, 74, 58, 0.15);
        }

        .form-check-input:checked {
            background-color: var(--terracotta);
            border-color: var(--terracotta);
        }

        .form-switch .form-check-input {
            width: 3em;
            height: 1.5em;
        }

        .rounded-4 { border-radius: 1rem; }
        .rounded-5 { border-radius: 1.5rem; }
    </style>
{% endblock %}
