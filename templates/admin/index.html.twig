{# templates/admin/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Administration - Tableau de bord{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container-fluid py-5" style="background: linear-gradient(rgba(250, 249, 246, 0.92), rgba(250, 249, 246, 0.92)), url('https://mindfuldesignconsulting.com/wp-content/uploads/2024/08/Textural-Variety-in-Restaurant-Design.jpg') center/cover no-repeat fixed; min-height: 100vh;">
        <div class="container pt-4">
            <div class="d-flex justify-content-end mb-5">
                <a href="{{ path('app_logout') }}" class="btn btn-outline-terracotta px-4 py-2">
                    <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                </a>
            </div>

            <div class="text-center mb-5">
                <h1 class="display-4 fw-light" style="font-family: 'Playfair Display', serif; color: #333;">
                    Tableau de Bord
                </h1>
                <p class="lead text-muted" style="font-family: 'Montserrat', sans-serif; letter-spacing: 1px;">
                    Bienvenue, Administrateur
                </p>
            </div>

            {# Section des Statistiques #}
            <div class="row g-4 mb-5">
                <div class="col-xl-3 col-md-6">
                    <div class="stat-card p-4 h-100 text-center shadow-sm">
                        <div class="stat-icon mb-3 text-olive">
                            <i class="bi bi-cash-stack fs-1"></i>
                        </div>
                        <div class="stat-label text-muted small text-uppercase letter-spacing">CA Aujourd'hui</div>
                        <div class="stat-value fw-bold">1 245 <span class="small">DT</span></div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="stat-card p-4 h-100 text-center shadow-sm">
                        <div class="stat-icon mb-3 text-terracotta">
                            <i class="bi bi-basket fs-1"></i>
                        </div>
                        <div class="stat-label text-muted small text-uppercase letter-spacing">Commandes</div>
                        <div class="stat-value fw-bold">48</div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="stat-card p-4 h-100 text-center shadow-sm">
                        <div class="stat-icon mb-3 text-gold">
                            <i class="bi bi-chair fs-1"></i>
                        </div>
                        <div class="stat-label text-muted small text-uppercase letter-spacing">Tables Occupées</div>
                        <div class="stat-value fw-bold">12/20</div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="stat-card p-4 h-100 text-center shadow-sm">
                        <div class="stat-icon mb-3 text-danger">
                            <i class="bi bi-fire fs-1"></i>
                        </div>
                        <div class="stat-label text-muted small text-uppercase letter-spacing">In Cucina</div>
                        <div class="stat-value fw-bold">7</div>
                    </div>
                </div>
            </div>

            <h2 class="text-center mb-5 text-muted" style="font-family: 'Playfair Display', serif; font-size: 2rem; letter-spacing: 2px;">
                GESTION DU RESTAURANT
            </h2>

            {# Section de gestion #}
            <div class="row g-4 pb-5">
                <div class="col-lg-4 col-md-6">
                    <a href="{{ path('app_admin_plats') }}" class="text-decoration-none text-dark">
                        <div class="management-card p-4 h-100 shadow-sm d-flex align-items-center">
                            <div class="management-icon terracotta me-4">
                                <i class="bi bi-journal-text fs-3"></i> {# Icône ajoutée pour Plats #}
                            </div>
                            <div>
                                <h3 class="h5 fw-semibold mb-1">Plats</h3>
                                <p class="small text-muted mb-0">Gérez le menu du restaurant</p>
                            </div>
                            <i class="bi bi-arrow-right ms-auto text-muted fs-4"></i>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4 col-md-6">
                    <a href="{{ path('app_admin_categories') }}" class="text-decoration-none text-dark">
                        <div class="management-card p-4 h-100 shadow-sm d-flex align-items-center">
                            <div class="management-icon olive me-4">
                                <i class="bi bi-tags fs-3"></i>
                            </div>
                            <div>
                                <h3 class="h5 fw-semibold mb-1">Catégories</h3>
                                <p class="small text-muted mb-0">Organisez par entrées, plats, desserts...</p>
                            </div>
                            <i class="bi bi-arrow-right ms-auto text-muted fs-4"></i>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4 col-md-6">
                    <a href="{{ path('app_admin_table_index') }}" class="text-decoration-none text-dark">
                        <div class="management-card p-4 h-100 shadow-sm d-flex align-items-center">
                            <div class="management-icon gold me-4">
                                <i class="bi bi-table fs-3"></i>
                            </div>
                            <div>
                                <h3 class="h5 fw-semibold mb-1">Tables</h3>
                                <p class="small text-muted mb-0">Configurez la disposition des tables</p>
                            </div>
                            <i class="bi bi-arrow-right ms-auto text-muted fs-4"></i>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4 col-md-6">
                    <a href="{{ path('app_admin_utilisateurs') }}" class="text-decoration-none text-dark">
                        <div class="management-card p-4 h-100 shadow-sm d-flex align-items-center">
                            <div class="management-icon terracotta me-4">
                                <i class="bi bi-people fs-3"></i>
                            </div>
                            <div>
                                <h3 class="h5 fw-semibold mb-1">Personnel</h3>
                                <p class="small text-muted mb-0">Gérez l'équipe du restaurant</p>
                            </div>
                            <i class="bi bi-arrow-right ms-auto text-muted fs-4"></i>
                        </div>
                    </a>
                </div>
                <div class="col-lg-4 col-md-6">
                    <a href="{{ path('app_admin_statistiques') }}" class="text-decoration-none text-dark">
                        <div class="management-card p-4 h-100 shadow-sm d-flex align-items-center">
                            <div class="management-icon olive me-4">
                                <i class="bi bi-graph-up fs-3"></i>
                            </div>
                            <div>
                                <h3 class="h5 fw-semibold mb-1">Statistiques</h3>
                                <p class="small text-muted mb-0">Analyse des ventes et performances</p>
                            </div>
                            <i class="bi bi-arrow-right ms-auto text-muted fs-4"></i>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .btn-outline-terracotta {
            border: 2px solid var(--terracotta);
            color: var(--terracotta);
            transition: all 0.3s ease;
        }
        .btn-outline-terracotta:hover {
            background: var(--terracotta);
            color: white;
        }

        .stat-card {
            background: white;
            border-radius: 20px;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }
        .stat-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        }
        .stat-value {
            font-size: 2.8rem;
            font-family: 'Playfair Display', serif;
            color: var(--text);
        }
        .stat-label {
            letter-spacing: 2px;
        }

        .text-olive { color: var(--olive); }
        .text-terracotta { color: var(--terracotta); }
        .text-gold { color: var(--gold); }

        .management-card {
            background: white;
            border-radius: 20px;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }
        .management-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.08);
        }

        .management-icon {
            width: 70px;
            height: 70px;
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            flex-shrink: 0;
        }
        .management-icon.terracotta { background: var(--terracotta); }
        .management-icon.olive { background: var(--olive); }
        .management-icon.gold { background: var(--gold); }

        @media (max-width: 768px) {
            .display-4 { font-size: 2.5rem; }
            .stat-value { font-size: 2.2rem; }
        }
    </style>
{% endblock %}
