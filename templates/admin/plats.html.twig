{# templates/admin/plats.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Gestion des Plats - Administration{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --cream: #FAF9F6;
            --text: #333333;
            --muted: #666666;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--cream);
        }

        h1, h2, h3, h4 {
            font-family: 'Playfair Display', serif;
        }

        /* Bouton principal terracotta */
        .btn-terracotta {
            background-color: var(--terracotta);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }

        .btn-terracotta:hover {
            background-color: #a83a2b;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
            color: white;
        }

        /* Bouton olive (moins utilisé maintenant) */
        .btn-olive {
            background-color: var(--olive);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }

        .btn-olive:hover {
            background-color: #5a7a1d;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(107, 142, 35, 0.3);
        }

        /* Nouveau : Bouton doré pour "Modifier" */
        .btn-gold {
            background-color: var(--gold);
            border: none;
            color: #333;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-gold:hover {
            background-color: #c19a2f;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(212, 175, 55, 0.4);
            color: #333;
        }

        .card {
            background: white;
            border: none;
            border-radius: 1rem;
            overflow: hidden;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.1);
        }

        .card-header {
            background: linear-gradient(135deg, var(--terracotta), #d45a4a);
            color: white;
            padding: 1.5rem;
        }

        .card-header h3 {
            margin: 0;
            font-weight: 700;
        }

        .card-header small {
            opacity: 0.9;
        }

        .plat-item {
            background: #fffdf9;
            border-left: 4px solid var(--gold);
            transition: all 0.3s ease;
        }

        .plat-item:hover {
            background: #fffaf0;
            border-left-color: var(--terracotta);
        }

        .badge-dispo {
            font-size: 0.85rem;
            padding: 0.5em 0.9em;
        }

        .price {
            color: var(--terracotta);
            font-weight: 600;
            font-size: 1.1rem;
        }
    </style>

    <div class="container mt-5 mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <!-- Changé en terracotta pour plus de cohérence -->
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-terracotta rounded-pill px-4">
                <i class="bi bi-arrow-left me-2"></i>Retour au tableau de bord
            </a>
            <a href="{{ path('app_admin_ajouter_plat') }}" class="btn btn-terracotta rounded-pill px-5 py-2 shadow">
                <i class="bi bi-plus-lg me-2"></i>Ajouter un plat
            </a>
        </div>

        <h1 class="display-5 text-center mb-3" style="color: var(--terracotta); font-weight: 700;">
            Gestion des Plats
        </h1>
        <h2 class="text-center text-muted mb-5" style="font-style: italic;">
            Menu du Restaurant Sapori di Sicilia
        </h2>

        {# Messages flash #}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show rounded-4 shadow-sm" role="alert">
                <i class="bi bi-check-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger alert-dismissible fade show rounded-4 shadow-sm" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {# Affichage des catégories uniquement si elles contiennent au moins un plat #}
        {% for nomCat, platsDansCat in platsParCategorie %}
            {% if platsDansCat|length > 0 %}
                <div class="card my-5 shadow-lg">
                    <div class="card-header">
                        <h3>{{ nomCat }}</h3>
                        <small>{{ platsDansCat|length }} plat{{ platsDansCat|length > 1 ? 's' : '' }}</small>
                    </div>
                    <div class="card-body p-4">
                        <div class="row">
                            {% for plat in platsDansCat %}
                                <div class="col-lg-6 col-xxl-4 mb-4">
                                    <div class="plat-item p-4 rounded-4 h-100">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <h4 class="mb-0" style="color: var(--terracotta);">{{ plat.nom }}</h4>
                                            <span class="badge badge-dispo bg-{{ plat.disponible ? 'success' : 'secondary' }} rounded-pill">
                                                {{ plat.disponible ? 'Disponible' : 'Indisponible' }}
                                            </span>
                                        </div>

                                        <p class="price mb-2">
                                            {{ plat.prix|number_format(2, '.', ',') }} DT
                                        </p>

                                        <p class="text-muted small mb-4">
                                            {{ plat.description|length > 120 ? plat.description|slice(0, 120) ~ '...' : plat.description }}
                                        </p>

                                        <div class="d-flex gap-2">
                                            <!-- Bouton Modifier en doré -->
                                            <a href="{{ path('app_admin_modifier_plat', {'id': plat.id}) }}"
                                               class="btn btn-gold btn-sm rounded-pill px-4">
                                                <i class="bi bi-pencil"></i> Modifier
                                            </a>
                                            <!-- Bouton Supprimer reste en danger (rouge) -->
                                            <form method="post"
                                                  action="{{ path('app_admin_supprimer_plat', {'id': plat.id}) }}"
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce plat ?');"
                                                  style="display: inline;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ plat.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm rounded-pill px-4">
                                                    <i class="bi bi-trash"></i> Supprimer
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        {# Message si aucun plat #}
        {% if platsParCategorie is empty or (platsParCategorie|filter(v => v|length > 0))|length == 0 %}
            <div class="text-center py-5">
                <p class="text-muted fst-italic fs-4">Aucun plat enregistré pour le moment.</p>
                <a href="{{ path('app_admin_ajouter_plat') }}" class="btn btn-terracotta mt-3 rounded-pill px-5">
                    <i class="bi bi-plus-lg me-2"></i>Ajouter le premier plat
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
