{# templates/admin/plats.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gestion des plats{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Gestion des plats</h1>
            <a href="{{ path('app_admin_ajouter_plat') }}" class="btn btn-success btn-lg">
                <i class="fas fa-plus"></i> Ajouter un plat
            </a>
        </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {# --- LOGIQUE DE REGROUPEMENT PAR CATEGORIE --- #}
        {% set platsParCategorie = {} %}
        {% for plat in plats %}
            {% set nomCat = plat.categorie ? plat.categorie.nom : "Sans catégorie" %}
            {% if platsParCategorie[nomCat] is not defined %}
                {% set platsParCategorie = platsParCategorie|merge({(nomCat): []}) %}
            {% endif %}
            {% set platsParCategorie = platsParCategorie|merge({(nomCat): platsParCategorie[nomCat]|merge([plat])}) %}
        {% endfor %}
        {# ---------------------------------------------- #}

        <div class="table-responsive">
            <table class="table table-hover align-middle shadow-sm bg-white">
                <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Description</th>
                    <th style="width: 120px;">Statut</th>
                    <th style="width: 180px;">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for nomCat, platsDansCat in platsParCategorie %}
                    {# Ligne d'en-tête de la catégorie #}
                    <tr class="table-secondary">
                        <td colspan="5" class="fw-bold text-uppercase py-3">
                            <i class="fas fa-folder-open me-2 text-primary"></i> {{ nomCat }}
                            <span class="badge bg-dark ms-2">{{ platsDansCat|length }}</span>
                        </td>
                    </tr>

                    {# Liste des plats de cette catégorie #}
                    {% for plat in platsDansCat %}
                        <tr>
                            <td class="ps-4"><strong>{{ plat.nom }}</strong></td>
                            <td class="fw-bold text-primary">{{ plat.prix|number_format(2, '.', ',') }} DT</td>
                            <td>
                                <small class="text-muted">
                                    {{ plat.description|length > 60 ? plat.description|slice(0, 60) ~ '...' : plat.description }}
                                </small>
                            </td>
                            <td>
                                <span class="badge rounded-pill bg-{{ plat.disponible ? 'success' : 'secondary' }}">
                                    {{ plat.disponible ? 'Disponible' : 'Indisponible' }}
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('app_admin_modifier_plat', {id: plat.id}) }}" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_admin_supprimer_plat', {id: plat.id}) }}"
                                          onsubmit="return confirm('Supprimer ce plat ?');" style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ plat.id) }}">
                                        <button class="btn btn-outline-danger btn-sm border-start-0">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center py-5 text-muted">
                            Aucun plat pour le moment. <a href="{{ path('app_admin_ajouter_plat') }}">Ajoutez le premier !</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-4 mb-5">
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Retour au tableau de bord
            </a>
        </div>
    </div>
{% endblock %}
