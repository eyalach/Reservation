{# templates/admin/utilisateur/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvel utilisateur{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100 d-flex align-items-center py-5"
         style="background: linear-gradient(rgba(250, 249, 246, 0.94), rgba(250, 249, 246, 0.94)),
            url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80') center/cover no-repeat;
            background-attachment: fixed;">
        <div class="container">
            <div class="text-start mb-4">
                <a href="{{ path('app_admin_utilisateurs') }}" class="btn btn-outline-terracotta px-4 py-2">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste des utilisateurs
                </a>
            </div>

            <div class="row justify-content-center">
                <!-- Largeur confortable et cohérente avec les autres formulaires -->
                <div class="col-md-11 col-lg-10 col-xl-9">
                    <div class="card shadow-lg border-0 rounded-5 overflow-hidden">
                        <div class="card-header text-white text-center py-4" style="background: var(--terracotta);">
                            <i class="bi bi-person-plus fs-2 me-2"></i>
                            <h2 class="h4 mb-0 fw-medium" style="font-family: 'Playfair Display', serif;">
                                Nouvel utilisateur
                            </h2>
                        </div>

                        <div class="card-body p-5">
                            <p class="text-center text-muted mb-5" style="font-family: 'Montserrat', sans-serif;">
                                Gestion des comptes du personnel
                            </p>

                            {{ form_start(form) }}

                            <div class="mb-4">
                                {{ form_label(form.email, 'Email *', {'label_attr': {'class': 'form-label fw-medium text-muted'}}) }}
                                {{ form_widget(form.email, {
                                    'attr': {
                                        'class': 'form-control form-control-lg rounded-4',
                                        'placeholder': 'exemple@restaurant.com'
                                    }
                                }) }}
                                <div class="text-danger small mt-1">{{ form_errors(form.email) }}</div>
                            </div>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    {{ form_label(form.nom, 'Nom *', {'label_attr': {'class': 'form-label fw-medium text-muted'}}) }}
                                    {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg rounded-4'}}) }}
                                    <div class="text-danger small mt-1">{{ form_errors(form.nom) }}</div>
                                </div>
                                <div class="col-md-6">
                                    {{ form_label(form.prenom, 'Prénom *', {'label_attr': {'class': 'form-label fw-medium text-muted'}}) }}
                                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control form-control-lg rounded-4'}}) }}
                                    <div class="text-danger small mt-1">{{ form_errors(form.prenom) }}</div>
                                </div>
                            </div>

                            <div class="mb-4 mt-4">
                                {{ form_label(form.tel, 'Téléphone', {'label_attr': {'class': 'form-label fw-medium text-muted'}}) }}
                                {{ form_widget(form.tel, {
                                    'attr': {
                                        'class': 'form-control form-control-lg rounded-4',
                                        'placeholder': '+216 ...'
                                    }
                                }) }}
                                <div class="text-danger small mt-1">{{ form_errors(form.tel) }}</div>
                            </div>

                            <div class="row g-4">
                                <div class="col-md-6">
                                    {{ form_label(form.plainPassword.first, 'Mot de passe *', {'label_attr': {'class': 'form-label fw-medium text-muted'}}) }}
                                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control form-control-lg rounded-4'}}) }}
                                    <div class="text-danger small mt-1">{{ form_errors(form.plainPassword.first) }}</div>
                                </div>
                                <div class="col-md-6">
                                    {{ form_label(form.plainPassword.second, 'Confirmation *', {'label_attr': {'class': 'form-label fw-medium text-muted'}}) }}
                                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control form-control-lg rounded-4'}}) }}
                                    <div class="text-danger small mt-1">{{ form_errors(form.plainPassword.second) }}</div>
                                </div>
                            </div>

                            <div class="mb-4 mt-4">
                                <label class="form-label fw-medium text-muted">Rôle utilisateur *</label>
                                {{ form_widget(form.roles, {'attr': {'class': 'form-select form-select-lg rounded-4'}}) }}
                                <div class="text-danger small mt-1">{{ form_errors(form.roles) }}</div>
                            </div>

                            {# Boutons de même taille #}
                            <div class="d-flex gap-3 justify-content-end mt-5">
                                <a href="{{ path('app_admin_utilisateurs') }}"
                                   class="btn btn-outline-terracotta btn-lg flex-fill py-3 shadow-sm">
                                    Annuler
                                </a>
                                <button type="submit" class="btn btn-terracotta btn-lg flex-fill py-3 shadow-sm">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Créer l'utilisateur
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .btn-terracotta {
            background: var(--terracotta);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-terracotta:hover {
            background: #a83a2b;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .btn-outline-terracotta {
            border: 2px solid var(--terracotta);
            color: var(--terracotta);
            transition: all 0.3s ease;
        }
        .btn-outline-terracotta:hover {
            background: var(--terracotta);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .card {
            background: white;
            transition: transform 0.4s ease;
        }
        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.08);
        }

        .form-control, .form-select {
            border: 1px solid #ddd;
            padding: 0.8rem 1rem;
        }
        .form-control:focus, .form-select:focus {
            border-color: var(--terracotta);
            box-shadow: 0 0 0 0.2rem rgba(193, 74, 58, 0.15);
        }

        .rounded-4 { border-radius: 1rem; }
        .rounded-5 { border-radius: 1.5rem; }
    </style>
{% endblock %}
