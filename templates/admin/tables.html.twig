{# templates/admin/tables.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Gérer les tables{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 d-flex justify-content-between align-items-center">
            Gérer les tables du restaurant
            <a href="{{ path('app_admin_table_new') }}" class="btn btn-success">
                + Ajouter une table
            </a>
        </h1>

        {% if tables|length > 0 %}
            <div class="row row-cols-2 row-cols-md-4 g-4">
                {% for table in tables %}
                    <div class="col">
                        <div class="card text-center h-100 shadow-sm border-3 {{ table.estlibre ? 'border-success' : 'border-danger' }}">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h2 class="card-title">Table {{ table.numero }}</h2>
                                    <p class="mb-2">{{ table.nbPlaces }} places</p>
                                    <span class="badge fs-5 bg-{{ table.estlibre ? 'success' : 'danger' }}">
                                    {{ table.estlibre ? 'Libre' : 'Occupée' }}
                                </span>
                                </div>
                                <div class="mt-3">
                                    <a href="{{ path('app_admin_table_edit', {id: table.id}) }}" class="btn btn-sm btn-warning">
                                        Modifier
                                    </a>
                                    <form method="post" action="{{ path('app_admin_table_delete', {id: table.id}) }}" onsubmit="return confirm('Supprimer cette table ?');" style="display:inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ table.id) }}">
                                        <button class="btn btn-sm btn-danger">Supprimer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info text-center">
                Aucune table configurée. <a href="{{ path('app_admin_table_new') }}">Ajoutez la première !</a>
            </div>
        {% endif %}

        <div class="mt-4">
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-secondary">← Retour au tableau de bord</a>
        </div>
    </div>
{% endblock %}
