{% extends 'base.html.twig' %}

{% block title %}{{ editMode ?? false ? 'Modifier' : 'Nouvelle' }} table{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100 d-flex align-items-center py-5"
         style="background: linear-gradient(rgba(250, 249, 246, 0.94), rgba(250, 249, 246, 0.94)),
            url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80') center/cover no-repeat;
            background-attachment: fixed;">
        <div class="container">
            <div class="text-start mb-4">
                <a href="{{ path('app_admin_table_index') }}" class="btn btn-outline-terracotta px-4 py-2">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste des tables
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-11 col-lg-10 col-xl-9">
                    <div class="card shadow-lg border-0 rounded-5 overflow-hidden">
                        <div class="card-header text-white text-center py-4" style="background: var(--terracotta);">
                            <i class="bi bi-table fs-2 me-2"></i>
                            <h2 class="h4 mb-0 fw-medium" style="font-family: 'Playfair Display', serif;">
                                {{ editMode ?? false ? 'Modifier la table' : 'Nouvelle table' }}
                            </h2>
                        </div>

                        <div class="card-body p-5">
                            <p class="text-center text-muted mb-5" style="font-family: 'Montserrat', sans-serif;">
                                Configuration de la salle
                            </p>

                            {{ form_start(form) }}

                            <div class="row g-4">
                                <div class="col-md-6">
                                    {{ form_row(form.numero, {
                                        'attr': {'class': 'form-control form-control-lg rounded-4', 'placeholder': 'Ex : 1, 2, 10...'},
                                        'label': 'Numéro de table *'
                                    }) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.nb_places, {
                                        'attr': {'class': 'form-control form-control-lg rounded-4', 'placeholder': 'Ex : 4'},
                                        'label': 'Nombre de places *'
                                    }) }}
                                </div>
                            </div>

                            <div class="mt-4">
                                <div class="form-check form-switch">
                                    {{ form_row(form.estlibre, {
                                        'label_attr': {'class': 'form-check-label text-muted fw-medium'},
                                        'attr': {'class': 'form-check-input'}
                                    }) }}
                                </div>
                            </div>

                            {# Boutons de même taille #}
                            <div class="d-flex gap-3 justify-content-end mt-5">
                                <a href="{{ path('app_admin_table_index') }}"
                                   class="btn btn-outline-terracotta btn-lg flex-fill py-3 shadow-sm">
                                    Annuler
                                </a>
                                <button type="submit" class="btn btn-terracotta btn-lg flex-fill py-3 shadow-sm">
                                    <i class="bi bi-check-circle me-2"></i>
                                    {{ button_label|default('Sauvegarder') }}
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .btn-terracotta {
            background: var(--terracotta);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-terracotta:hover {
            background: #a83a2b;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .btn-outline-terracotta {
            border: 2px solid var(--terracotta);
            color: var(--terracotta);
            transition: all 0.3s ease;
        }
        .btn-outline-terracotta:hover {
            background: var(--terracotta);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .card {
            background: white;
            transition: transform 0.4s ease;
        }
        .card:hover {
            transform: translateY(-8px);
        }

        .form-control {
            border: 1px solid #ddd;
            padding: 0.8rem 1rem;
        }
        .form-control:focus {
            border-color: var(--terracotta);
            box-shadow: 0 0 0 0.2rem rgba(193, 74, 58, 0.15);
        }

        .form-check-input:checked {
            background-color: var(--terracotta);
            border-color: var(--terracotta);
        }

        .form-switch .form-check-input {
            width: 3em;
            height: 1.5em;
        }

        .rounded-5 { border-radius: 1.5rem; }
    </style>
{% endblock %}
