{% extends 'base.html.twig' %}

{% block title %}Catégories - Administration{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100 py-5"
         style="background: linear-gradient(rgba(250, 249, 246, 0.94), rgba(250, 249, 246, 0.94)),
            url('https://images.unsplash.com/photo-1555396273-367ea4eb4db5?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80') center/cover no-repeat;
            background-attachment: fixed;">
        <div class="container">
            <div class="text-start mb-4">
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-terracotta px-4 py-2">
                    <i class="bi bi-arrow-left me-2"></i>Tableau de bord
                </a>
            </div>

            <div class="text-center mb-5">
                <h1 class="display-5 fw-light" style="font-family: 'Playfair Display', serif; color: #333;">
                    Catégories
                </h1>
                <p class="text-muted" style="font-family: 'Montserrat', sans-serif; letter-spacing: 1px;">
                    Organisation du menu
                </p>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-10 col-lg-8">
                    <div class="card shadow-lg border-0 rounded-5 overflow-hidden">
                        <div class="card-header d-flex align-items-center justify-content-between text-white py-4 px-5" style="background: var(--terracotta);">
                            <div>
                                <i class="bi bi-tags fs-3 me-3"></i>
                                <span class="h5 mb-0 fw-medium">Liste des catégories</span>
                            </div>
                            <a href="{{ path('app_admin_categorie_ajouter') }}" class="btn btn-light btn-sm px-4 py-2 shadow-sm">
                                <i class="bi bi-plus-circle me-2"></i>Nouvelle catégorie
                            </a>
                        </div>

                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0 align-middle">
                                    <thead class="bg-light">
                                    <tr>
                                        <th class="ps-5">ID</th>
                                        <th>Nom de la catégorie</th>
                                        <th class="text-end pe-5">Actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for cat in categories %}
                                        <tr class="transition">
                                            <td class="ps-5 text-muted">#{{ cat.id }}</td>
                                            <td class="fw-medium">{{ cat.nom }}</td>
                                            <td class="text-end pe-5">
                                                <a href="{{ path('app_admin_categorie_modifier', {id: cat.id}) }}"
                                                   class="btn btn-outline-terracotta btn-sm px-4">
                                                    <i class="bi bi-pencil me-2"></i>Modifier
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3" class="text-center py-5 text-muted">
                                                <i class="bi bi-inbox fs-1 mb-3 opacity-50"></i><br>
                                                Aucune catégorie trouvée
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .btn-terracotta {
            background: var(--terracotta);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-terracotta:hover {
            background: #a83a2b;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .btn-outline-terracotta {
            border: 2px solid var(--terracotta);
            color: var(--terracotta);
            transition: all 0.3s ease;
        }
        .btn-outline-terracotta:hover {
            background: var(--terracotta);
            color: white;
        }

        .card {
            background: white;
            transition: transform 0.4s ease;
        }
        .card:hover {
            transform: translateY(-8px);
        }

        .table-hover > tbody > tr:hover {
            background-color: rgba(193, 74, 58, 0.05);
        }

        .table th {
            border-top: none;
            font-weight: 500;
            color: var(--muted);
            letter-spacing: 0.5px;
        }

        .rounded-5 { border-radius: 1.5rem; }
    </style>
{% endblock %}
