{% extends 'base.html.twig' %}

{% block title %}{{ editMode ? 'Modifier' : 'Nouvelle' }} catégorie{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100 d-flex align-items-center py-5"
         style="background: linear-gradient(rgba(250, 249, 246, 0.94), rgba(250, 249, 246, 0.94)),
            url('https://images.unsplash.com/photo-1555396273-367ea4eb4db5?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80') center/cover no-repeat;
            background-attachment: fixed;">
        <div class="container">
            <div class="text-start mb-4">
                <a href="{{ path('app_admin_categories') }}" class="btn btn-outline-terracotta px-4 py-2">
                    <i class="bi bi-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card shadow-lg border-0 rounded-5 overflow-hidden">
                        <div class="card-header text-white text-center py-4" style="background: var(--terracotta);">
                            <i class="bi bi-tags fs-2 me-2"></i>
                            <h2 class="h4 mb-0 fw-medium" style="font-family: 'Playfair Display', serif;">
                                {{ editMode ? 'Modifier la catégorie' : 'Nouvelle catégorie' }}
                            </h2>
                        </div>

                        <div class="card-body p-5">
                            <p class="text-center text-muted mb-5" style="font-family: 'Montserrat', sans-serif;">
                                Gestion du menu
                            </p>

                            {{ form_start(form) }}

                            <div class="mb-4">
                                {{ form_label(form.nom, 'Nom de la catégorie *', {
                                    'label_attr': {'class': 'form-label fw-medium text-muted'}
                                }) }}
                                {{ form_widget(form.nom, {
                                    'attr': {
                                        'class': 'form-control form-control-lg rounded-4',
                                        'placeholder': 'Ex : Entrées, Plats principaux, Desserts, Boissons...'
                                    }
                                }) }}
                                <div class="text-danger small mt-1">
                                    {{ form_errors(form.nom) }}
                                </div>
                            </div>

                            <div class="d-flex flex-column flex-md-row gap-3 justify-content-end">
                                <a href="{{ path('app_admin_categories') }}"
                                   class="btn btn-outline-terracotta btn-lg px-5 order-md-first">
                                    Annuler
                                </a>
                                <button type="submit" class="btn btn-terracotta btn-lg px-5 shadow-sm">
                                    <i class="bi bi-check-circle me-2"></i>
                                    {{ editMode ? 'Mettre à jour' : 'Enregistrer' }}
                                </button>
                            </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .btn-terracotta {
            background: var(--terracotta);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-terracotta:hover {
            background: #a83a2b;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .btn-outline-terracotta {
            border: 2px solid var(--terracotta);
            color: var(--terracotta);
            transition: all 0.3s ease;
        }
        .btn-outline-terracotta:hover {
            background: var(--terracotta);
            color: white;
        }

        .card {
            background: white;
            transition: transform 0.4s ease;
        }
        .card:hover {
            transform: translateY(-8px);
        }

        .form-control {
            border: 1px solid #ddd;
            padding: 0.8rem 1rem;
        }
        .form-control:focus {
            border-color: var(--terracotta);
            box-shadow: 0 0 0 0.2rem rgba(193, 74, 58, 0.15);
        }

        .rounded-5 { border-radius: 1.5rem; }
    </style>
{% endblock %}
