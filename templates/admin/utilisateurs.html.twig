{# templates/admin/utilisateurs.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Utilisateurs - Administration{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100 py-5"
         style="background: linear-gradient(rgba(250, 249, 246, 0.94), rgba(250, 249, 246, 0.94)),
            url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80') center/cover no-repeat;
            background-attachment: fixed;">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3 mb-5">
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-terracotta px-4 py-2">
                    <i class="bi bi-arrow-left me-2"></i>Tableau de bord
                </a>
                <a href="{{ path('app_admin_ajouter_utilisateur') }}" class="btn btn-terracotta btn-lg px-5 shadow-sm">
                    <i class="bi bi-person-plus me-2"></i>Ajouter un utilisateur
                </a>
            </div>

            <div class="text-center mb-5">
                <h1 class="display-5 fw-light" style="font-family: 'Playfair Display', serif; color: #333;">
                    Utilisateurs
                </h1>
                <p class="text-muted" style="font-family: 'Montserrat', sans-serif; letter-spacing: 1px;">
                    Gestion des comptes du personnel
                </p>
            </div>

            {# Messages flash #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success rounded-4 mb-4 py-3 shadow-sm text-center">
                    <i class="bi bi-check-circle me-2"></i>{{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger rounded-4 mb-4 py-3 shadow-sm text-center">
                    <i class="bi bi-exclamation-circle me-2"></i>{{ message }}
                </div>
            {% endfor %}

            <div class="card shadow-lg border-0 rounded-5 overflow-hidden">
                <div class="card-header text-white text-center py-4" style="background: var(--terracotta);">
                    <i class="bi bi-people fs-2 me-2"></i>
                    <h2 class="h4 mb-0 fw-medium" style="font-family: 'Playfair Display', serif;">
                        Liste des utilisateurs
                    </h2>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="bg-light">
                            <tr>
                                <th class="ps-5">Email</th>
                                <th>Nom complet</th>
                                <th>Téléphone</th>
                                <th>Rôle</th>
                                <th class="text-end pe-5">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr class="transition">
                                    <td class="ps-5"><strong>{{ user.email }}</strong></td>
                                    <td>{{ user.nom }} {{ user.prenom }}</td>
                                    <td>{{ user.tel|default('Non renseigné') }}</td>
                                    <td>
                                        {% set role = user.roles|first|default('ROLE_USER') %}
                                        {% if role == 'ROLE_ADMIN' %}
                                            <span class="badge rounded-pill bg-danger px-3 py-2">Administrateur</span>
                                        {% elseif role == 'ROLE_SERVEUR' %}
                                            <span class="badge rounded-pill bg-success px-3 py-2">Serveur</span>
                                        {% else %}
                                            <span class="badge rounded-pill bg-secondary px-3 py-2">Client</span>
                                        {% endif %}
                                    </td>
                                    <td class="text-end pe-5">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a href="{{ path('app_admin_modifier_utilisateur', {id: user.id}) }}"
                                               class="btn btn-outline-terracotta btn-sm rounded-circle p-2" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_admin_supprimer_utilisateur', {id: user.id}) }}"
                                                  onsubmit="return confirm('Supprimer cet utilisateur ?');"
                                                  class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button type="submit" class="btn btn-outline-danger btn-sm rounded-circle p-2" title="Supprimer">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="bi bi-people fs-1 mb-3 opacity-50"></i><br>
                                        Aucun utilisateur enregistré
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .text-terracotta { color: var(--terracotta); }

        .btn-terracotta {
            background: var(--terracotta);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-terracotta:hover {
            background: #a83a2b;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .btn-outline-terracotta {
            border: 2px solid var(--terracotta);
            color: var(--terracotta);
            transition: all 0.3s ease;
        }
        .btn-outline-terracotta:hover {
            background: var(--terracotta);
            color: white;
        }

        .card {
            background: white;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.08);
        }

        .table-hover > tbody > tr:hover {
            background-color: rgba(193, 74, 58, 0.05);
        }

        .table th {
            border-top: none;
            font-weight: 500;
            color: var(--muted);
            letter-spacing: 0.5px;
        }

        .badge {
            font-size: 0.9rem;
        }

        .rounded-5 { border-radius: 1.5rem; }

        .transition { transition: all 0.3s ease; }
    </style>
{% endblock %}
