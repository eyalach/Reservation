{# templates/client/dashboard.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon espace client{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100 py-5"
         style="background: linear-gradient(rgba(250, 249, 246, 0.94), rgba(250, 249, 246, 0.94)),
            url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80') center/cover no-repeat;
            background-attachment: fixed;">
        <div class="container">
            {# ===== PROFIL CLIENT ===== #}
            <div class="row justify-content-center mb-5">
                <div class="col-lg-8 col-xl-6">
                    <div class="card shadow-lg border-0 rounded-5 overflow-hidden text-center transition">
                        <div class="card-body py-5 px-4">
                            <div class="avatar mb-4 mx-auto" style="width: 90px; height: 90px; background: linear-gradient(135deg, var(--terracotta), var(--gold));">
                                <i class="bi bi-person-circle fs-1 text-white"></i>
                                {# Alternative avec initiales : {{ app.user.prenom|first }}{{ app.user.nom|first }} #}
                            </div>
                            <h2 class="h3 fw-semibold mb-2" style="font-family: 'Playfair Display', serif;">
                                {{ app.user.prenom }} {{ app.user.nom }}
                            </h2>
                            <p class="text-muted mb-4">{{ app.user.email }}</p>
                            <a href="{{ path('app_logout') }}" class="btn btn-outline-terracotta px-5 py-2">
                                <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            {# ===== TITRE PRINCIPAL ===== #}
            <div class="text-center mb-5">
                <h1 class="display-4 fw-light" style="font-family: 'Playfair Display', serif; color: #333;">
                    Bienvenue
                </h1>
                <p class="lead text-muted" style="font-family: 'Montserrat', sans-serif; letter-spacing: 1px;">
                    Que souhaitez-vous faire aujourd’hui ?
                </p>
            </div>

            {# ===== CARTES D'ACTION ===== #}
            <div class="row g-4 justify-content-center">
                {# Réserver #}
                <div class="col-md-4 col-lg-3">
                    <a href="{{ path('app_client_reserver_table') }}" class="action-card h-100 text-decoration-none transition">
                        <div class="card shadow-sm border-0 rounded-5 overflow-hidden h-100 d-flex flex-column">
                            <div class="card-body text-center p-5 d-flex flex-column justify-content-center">
                                <div class="action-icon mb-4">
                                    <i class="bi bi-calendar-check fs-2 text-terracotta"></i>
                                </div>
                                <h3 class="h5 fw-semibold mb-3">Réserver une table</h3>
                                <p class="text-muted flex-grow-1 mb-0">Planifiez votre visite en quelques clics</p>
                            </div>
                        </div>
                    </a>
                </div>

                {# Commander #}
                <div class="col-md-4 col-lg-3">
                    <a href="{{ path('app_client_passer_commande') }}" class="action-card h-100 text-decoration-none transition">
                        <div class="card shadow-sm border-0 rounded-5 overflow-hidden h-100 d-flex flex-column">
                            <div class="card-body text-center p-5 d-flex flex-column justify-content-center">
                                <div class="action-icon mb-4">
                                    <i class="bi bi-basket2 fs-2 text-olive"></i>
                                </div>
                                <h3 class="h5 fw-semibold mb-3">Commander en ligne</h3>
                                <p class="text-muted flex-grow-1 mb-0">Choisissez vos plats préférés</p>
                            </div>
                        </div>
                    </a>
                </div>

                {# Historique #}
                <div class="col-md-4 col-lg-3">
                    <a href="{{ path('app_client_historique') }}" class="action-card h-100 text-decoration-none transition">
                        <div class="card shadow-sm border-0 rounded-5 overflow-hidden h-100 d-flex flex-column">
                            <div class="card-body text-center p-5 d-flex flex-column justify-content-center">
                                <div class="action-icon mb-4">
                                    <i class="bi bi-clock-history fs-2 text-gold"></i>
                                </div>
                                <h3 class="h5 fw-semibold mb-3">Mon historique</h3>
                                <p class="text-muted flex-grow-1 mb-0">Consultez vos réservations et commandes</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .btn-outline-terracotta {
            border: 2px solid var(--terracotta);
            color: var(--terracotta);
            transition: all 0.3s ease;
        }
        .btn-outline-terracotta:hover {
            background: var(--terracotta);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .card {
            background: white;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }
        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.08);
        }

        .action-card:hover .card {
            transform: translateY(-12px);
            box-shadow: 0 30px 60px rgba(0,0,0,0.12);
        }

        .text-terracotta { color: var(--terracotta) !important; }
        .text-olive { color: var(--olive) !important; }
        .text-gold { color: var(--gold) !important; }

        .rounded-5 { border-radius: 1.5rem; }

        .transition { transition: all 0.3s ease; }

        @media (max-width: 768px) {
            .display-4 { font-size: 2.8rem; }
            .action-card .card-body { p-4; }
        }
    </style>
{% endblock %}
