{# templates/client/dashboard.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Mon espace client{% endblock %}
{% block body %}
    <div class="container">
        <!-- Carte utilisateur avec déconnexion -->
        <div class="card shadow-sm mb-5 border-0 bg-light">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="bi bi-person-fill fs-4"></i>
                    </div>
                    <div>
                        <h5 class="card-title mb-0">{{ app.user.prenom }} {{ app.user.nom }}</h5>
                        <p class="card-text text-muted mb-0">{{ app.user.email }}</p>
                    </div>
                </div>
                <a href="{{ path('app_logout') }}" class="btn btn-danger">
                    <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                </a>
            </div>
        </div>

        {# templates/client/index.html.twig #}

        <h2 class="text-center mb-4">Que souhaitez-vous faire ?</h2>
        <div class="row mt-4">
            <div class="col-md-4">
                {# Lien vers le formulaire de réservation #}
                <a href="{{ path('app_client_reserver_table') }}" class="btn btn-primary btn-lg w-100 p-5">
                    <i class="bi bi-calendar-check d-block mb-2 fs-1"></i> Réserver une table
                </a>
            </div>

            <div class="col-md-4">
                {# ATTENTION : On pointe vers 'app_client_passer_commande' (GET) et non '_post' #}
                <a href="{{ path('app_client_passer_commande') }}" class="btn btn-success btn-lg w-100 p-5">
                    <i class="bi bi-cart d-block mb-2 fs-1"></i> Commander en ligne
                </a>
            </div>

            <div class="col-md-4">
                {# Assurez-vous que cette route existe ou laissez '#' pour le moment #}
                <a href="{{ path('app_client_historique') }}" class="btn btn-info btn-lg w-100 p-5 text-white">
                    <i class="bi bi-clock-history d-block mb-2 fs-1"></i> Mon historique
                </a>
            </div>
        </div>
    </div>
{% endblock %}
