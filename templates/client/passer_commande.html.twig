{# templates/client/passer_commande.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Commander en ligne{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="h2 mb-4 text-center text-success">Commander en ligne</h1>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            {% for plat in plats|default([]) %}
                <div class="col">
                    <div class="card h-100 shadow-sm hover-shadow transition">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ plat.nom }}</h5>
                            <p class="card-text text-muted flex-grow-1">
                                {{ plat.description|default('Délicieux plat maison') }}
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <strong class="text-success fs-3">{{ plat.prix }} DT</strong>
                                    <button class="btn btn-success btn-lg ajouter-panier"
                                            data-id="{{ plat.id }}"
                                            data-nom="{{ plat.nom }}"
                                            data-prix="{{ plat.prix }}">
                                        Ajouter
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center py-5">
                    <p class="text-muted fs-4">Aucun plat disponible pour le moment.</p>
                </div>
            {% endfor %}
        </div>

        <!-- Bouton Panier -->
        <div class="text-center mt-5">
            <button class="btn btn-warning btn-lg position-relative shadow-lg" data-bs-toggle="modal" data-bs-target="#panierModal">
                Voir mon panier
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger panier-count">
                0
            </span>
            </button>
        </div>
    </div>

    <!-- MODAL PANIER + PAIEMENT -->
    <div class="modal fade" id="panierModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Mon Panier</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="panier-contenu">
                    <p class="text-center text-muted">Votre panier est vide</p>
                </div>
                <div class="modal-footer d-flex justify-content-between align-items-center border-top pt-3">
                    <div>
                        <strong class="fs-4 text-success">Total : <span id="total-prix">0.00</span> DT</strong>
                    </div>
                    <div>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Continuer mes achats</button>
                        <button type="button" class="btn btn-success btn-lg" id="valider-commande" {% if panier is defined and panier is empty %}disabled{% endif %}>
                            Valider la commande
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- MODAL PAIEMENT (apparaît après validation) -->
    <div class="modal fade" id="paiementModal" tabindex="-1">
        <div class="modal-dialog modal-md">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Choisir le mode de paiement</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <div class="row g-4">
                        <div class="col-12">
                            <button class="btn btn-outline-success btn-lg w-100 p-4" onclick="confirmerPaiement('Espèces à la livraison')">
                                Espèces à la livraison
                            </button>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-outline-primary btn-lg w-100 p-4" onclick="confirmerPaiement('Carte bancaire')">
                                Carte bancaire
                            </button>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-outline-info btn-lg w-100 p-4" onclick="confirmerPaiement('Flouci / D17')">
                                Flouci / D17
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let panier = JSON.parse(localStorage.getItem('panier') || '[]');
            mettreAJourPanier();

            document.querySelectorAll('.ajouter-panier').forEach(btn => {
                btn.addEventListener('click', () => {
                    const item = {
                        id: btn.dataset.id,
                        nom: btn.dataset.nom,
                        prix: parseFloat(btn.dataset.prix)
                    };
                    panier.push(item);
                    localStorage.setItem('panier', JSON.stringify(panier));
                    mettreAJourPanier();
                    alert(`${item.nom} ajouté au panier !`);
                });
            });

            function mettreAJourPanier() {
                const count = panier.length;
                document.querySelectorAll('.panier-count').forEach(el => el.textContent = count);

                const total = panier.reduce((sum, item) => sum + item.prix, 0).toFixed(2);

                const contenu = count === 0
                    ? '<p class="text-center text-muted fs-5">Votre panier est vide</p>'
                    : panier.map((p, i) => `
                <div class="d-flex justify-content-between align-items-center border-bottom pb-3 mb-3">
                    <div>
                        <strong>${p.nom}</strong><br>
                        <small class="text-muted">1 × ${p.prix} DT</small>
                    </div>
                    <strong>${p.prix.toFixed(2)} DT</strong>
                    <button class="btn btn-sm btn-danger ms-3" onclick="supprimerDuPanier(${i})">Supprimer</button>
                </div>
            `).join('');

                document.getElementById('panier-contenu').innerHTML = contenu;
                document.getElementById('total-prix').textContent = total;
            }

            window.supprimerDuPanier = function(index) {
                panier.splice(index, 1);
                localStorage.setItem('panier', JSON.stringify(panier));
                mettreAJourPanier();
            };

            document.getElementById('valider-commande').addEventListener('click', () => {
                if (panier.length > 0) {
                    const total = panier.reduce((s, i) => s + i.prix, 0).toFixed(2);
                    if (confirm(`Confirmer la commande de ${total} DT ?`)) {
                        document.querySelector('#panierModal .btn-close').click();
                        const paiementModal = new bootstrap.Modal(document.getElementById('paiementModal'));
                        paiementModal.show();
                    }
                }
            });
        });

        function confirmerPaiement(mode) {
            alert(`Commande validée !\nTotal: ${document.getElementById('total-prix').textContent} DT\nPaiement: ${mode}\nMerci pour votre confiance !`);
            localStorage.removeItem('panier');
            location.reload();
        }
    </script>

    <style>
        .hover-shadow:hover { box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important; transition: all 0.3s; }
        .transition { transition: all 0.3s ease; }
    </style>
{% endblock %}
