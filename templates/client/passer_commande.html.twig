{# templates/client/passer_commande.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Passer une commande{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100 py-5"
         style="background: linear-gradient(rgba(250, 249, 246, 0.94), rgba(250, 249, 246, 0.94)),
            url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80') center/cover no-repeat;
            background-attachment: fixed;">
        <div class="container">
            <div class="text-start mb-4">
                <a href="{{ path('app_client_dashboard') }}" class="btn btn-outline-terracotta px-4 py-2">
                    <i class="bi bi-arrow-left me-2"></i>Tableau de bord
                </a>
            </div>

            <div class="text-center mb-5">
                <h1 class="display-5 fw-light" style="font-family: 'Playfair Display', serif; color: #333;">
                    Notre Menu
                </h1>
                <p class="lead text-muted" style="font-family: 'Montserrat', sans-serif; letter-spacing: 1px;">
                    Choisissez vos plats préférés
                </p>
            </div>

            {# Messages d'erreur #}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger rounded-4 mb-4 py-3 shadow-sm text-center">
                    <i class="bi bi-exclamation-circle me-2"></i>{{ message }}
                </div>
            {% endfor %}

            {% if plats|length == 0 %}
                <div class="text-center py-5">
                    <div class="card shadow-sm border-0 rounded-5 py-5">
                        <i class="bi bi-utensils fs-1 text-muted mb-4 opacity-50"></i>
                        <p class="text-muted">Aucun plat disponible pour le moment.</p>
                    </div>
                </div>
            {% else %}
                <form id="commandeForm" method="POST" action="{{ path('app_client_passer_commande_post') }}">
                    {# Regroupement par catégorie #}
                    {% set platsParCategorie = {} %}
                    {% for plat in plats %}
                        {% set nomCat = plat.categorie ? plat.categorie.nom : "Autres" %}
                        {% if platsParCategorie[nomCat] is not defined %}
                            {% set platsParCategorie = platsParCategorie|merge({(nomCat): []}) %}
                        {% endif %}
                        {% set platsParCategorie = platsParCategorie|merge({(nomCat): platsParCategorie[nomCat]|merge([plat])}) %}
                    {% endfor %}

                    {% for nomCat, platsDansCat in platsParCategorie %}
                        <h3 class="h4 fw-semibold text-terracotta mb-4 pb-2 border-bottom border-2">
                            <i class="bi bi-utensils me-3"></i>{{ nomCat }}
                        </h3>
                        <div class="row g-4 mb-5">
                            {% for plat in platsDansCat %}
                                <div class="col-md-6 col-lg-4">
                                    <div class="card shadow-sm border-0 rounded-4 h-100 transition">
                                        <div class="card-body p-4 d-flex flex-column">
                                            <h5 class="card-title fw-semibold mb-3">{{ plat.nom }}</h5>
                                            <p class="text-muted small flex-grow-1 mb-4">{{ plat.description }}</p>
                                            <div class="d-flex justify-content-between align-items-end">
                                                <span class="fs-4 fw-bold text-olive">{{ plat.prix|number_format(2) }} DT</span>
                                                <div class="w-50">
                                                    <label for="quantity_{{ plat.id }}" class="form-label small fw-medium text-muted">Quantité</label>
                                                    <input type="number"
                                                           class="form-control form-control-lg rounded-4 text-center"
                                                           id="quantity_{{ plat.id }}"
                                                           name="items[{{ plat.id }}]"
                                                           min="0"
                                                           max="50"
                                                           value="0"
                                                           data-prix="{{ plat.prix }}"
                                                           data-nom="{{ plat.nom }}">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endfor %}

                    {# Récapitulatif & Validation #}
                    <div class="card shadow-lg border-0 rounded-5 overflow-hidden">
                        <div class="card-header text-white text-center py-4" style="background: var(--olive);">
                            <i class="bi bi-basket2 fs-2 me-2"></i>
                            <h2 class="h4 mb-0 fw-medium">Récapitulatif de votre commande</h2>
                        </div>
                        <div class="card-body p-5">
                            <div id="recapitulatif" class="mb-4 text-muted">
                                Sélectionnez des plats pour voir le récapitulatif
                            </div>

                            <div class="row g-4 align-items-end">
                                <div class="col-md-4">
                                    <label for="tableId" class="form-label fw-medium text-muted">Votre table *</label>
                                    <select class="form-select form-select-lg rounded-4" id="tableId" name="tableId" required>
                                        <option value="" selected disabled>Choisir la table...</option>
                                        {% for table in tables %}
                                            <option value="{{ table.id }}">
                                                Table n°{{ table.numero }} ({{ table.nbPlaces }} pl.)
                                                {{ not table.estLibre ? ' – Occupée' : '' }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="modePaiement" class="form-label fw-medium text-muted">Mode de paiement *</label>
                                    <select class="form-select form-select-lg rounded-4" id="modePaiement" name="modePaiement" required>
                                        <option value="Espèces">Espèces</option>
                                        <option value="Carte bancaire">Carte bancaire</option>
                                        <option value="Chèque">Chèque</option>
                                    </select>
                                </div>
                                <div class="col-md-4 text-end">
                                    <h4 class="fw-medium text-muted mb-2">Total :</h4>
                                    <div id="totalCommande" class="display-5 fw-bold text-olive">0.00 DT</div>
                                </div>
                            </div>

                            <div class="text-center mt-5">
                                <button type="submit" class="btn btn-terracotta btn-lg px-5 py-3 shadow-sm">
                                    <i class="bi bi-check-circle me-2"></i>Confirmer la commande
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            {% endif %}
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('input[type="number"]');
            const recap = document.getElementById('recapitulatif');
            const totalEl = document.getElementById('totalCommande');

            function updateRecap() {
                let total = 0;
                let html = '<ul class="list-unstyled mb-0">';

                inputs.forEach(i => {
                    let q = parseInt(i.value) || 0;
                    if (q > 0) {
                        let prix = parseFloat(i.dataset.prix);
                        let sousTotal = prix * q;
                        total += sousTotal;
                        html += `<li class="d-flex justify-content-between py-2 border-bottom border-light">
                                <span>${i.dataset.nom} × ${q}</span>
                                <span class="fw-medium">${sousTotal.toFixed(2)} DT</span>
                             </li>`;
                    }
                });

                html += '</ul>';

                if (total === 0) {
                    html = '<p class="text-muted">Sélectionnez des plats pour voir le récapitulatif</p>';
                } else {
                    html += `<div class="text-end mt-4 fw-bold fs-4 text-olive">Total : ${total.toFixed(2)} DT</div>`;
                }

                recap.innerHTML = html;
                totalEl.textContent = total.toFixed(2) + ' DT';
            }

            inputs.forEach(i => i.addEventListener('input', updateRecap));
            updateRecap();
        });
    </script>

    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .text-terracotta { color: var(--terracotta); }
        .text-olive { color: var(--olive); }

        .btn-terracotta {
            background: var(--terracotta);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-terracotta:hover {
            background: #a83a2b;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .btn-outline-terracotta {
            border: 2px solid var(--terracotta);
            color: var(--terracotta);
            transition: all 0.3s ease;
        }
        .btn-outline-terracotta:hover {
            background: var(--terracotta);
            color: white;
        }

        .card {
            background: white;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.08);
        }

        .form-control, .form-select {
            border: 1px solid #ddd;
            padding: 0.8rem 1rem;
        }
        .form-control:focus, .form-select:focus {
            border-color: var(--terracotta);
            box-shadow: 0 0 0 0.2rem rgba(193, 74, 58, 0.15);
        }

        .rounded-4 { border-radius: 1rem; }
        .rounded-5 { border-radius: 1.5rem; }

        .transition { transition: all 0.3s ease; }
    </style>
{% endblock %}
