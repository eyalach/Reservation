{% extends 'base.html.twig' %}

{% block title %}Passer une commande{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Notre Menu</h1>

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% if plats|length == 0 %}
            <div class="alert alert-warning">
                Aucun plat disponible pour le moment.
            </div>
        {% else %}
            {# --- LOGIQUE DE REGROUPEMENT PAR CATEGORIE --- #}
            {% set platsParCategorie = {} %}
            {% for plat in plats %}
                {% set nomCat = plat.categorie ? plat.categorie.nom : "Autres" %}
                {% if platsParCategorie[nomCat] is not defined %}
                    {% set platsParCategorie = platsParCategorie|merge({(nomCat): []}) %}
                {% endif %}
                {% set platsParCategorie = platsParCategorie|merge({(nomCat): platsParCategorie[nomCat]|merge([plat])}) %}
            {% endfor %}

            <form id="commandeForm" method="POST" action="{{ path('app_client_passer_commande_post') }}">

                {% for nomCat, platsDansCat in platsParCategorie %}
                    <h3 class="mt-5 mb-3 pb-2 border-bottom text-primary">
                        <i class="fas fa-utensils me-2"></i>{{ nomCat }}
                    </h3>

                    <div class="row">
                        {% for plat in platsDansCat %}
                            <div class="col-md-4 mb-4">
                                <div class="card h-100 shadow-sm border-0">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between">
                                            <h5 class="card-title">{{ plat.nom }}</h5>
                                            <span class="badge bg-light text-primary border">{{ plat.prix }} DT</span>
                                        </div>
                                        <p class="card-text text-muted small mt-2">{{ plat.description }}</p>

                                        <div class="input-group mt-3">
                                            <label for="quantity_{{ plat.id }}" class="input-group-text bg-white">Quantité</label>
                                            <input
                                                type="number"
                                                class="form-control quantity-input"
                                                id="quantity_{{ plat.id }}"
                                                name="items[{{ plat.id }}]"
                                                min="0"
                                                max="50"
                                                value="0"
                                                data-prix="{{ plat.prix }}"
                                                data-nom="{{ plat.nom }}"
                                            >
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endfor %}

                <div class="card mt-5 mb-5 shadow border-primary">
                    <div class="card-header bg-primary text-white py-3">
                        <h4 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Récapitulatif de la commande</h4>
                    </div>
                    <div class="card-body">
                        <div id="recapitulatif">
                            <p class="text-muted">Sélectionnez des plats pour voir le récapitulatif</p>
                        </div>

                        <hr>

                        <div class="row g-3">
                            <!-- NOUVEAU : SELECTION DE LA TABLE -->
                            <div class="col-md-4">
                                <label for="tableId" class="form-label fw-bold">Votre Table</label>
                                <select class="form-select form-select-lg border-primary" id="tableId" name="tableId" required>
                                    <option value="" selected disabled>Choisir la table...</option>
                                    {% for table in tables %}
                                        <option value="{{ table.id }}">
                                            Table n°{{ table.numero }} ({{ table.nbPlaces }} pl.) {{ not table.estLibre ? '- Occupée' : '' }}
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="col-md-4">
                                <label for="modePaiement" class="form-label fw-bold">Mode de paiement</label>
                                <select class="form-select form-select-lg" id="modePaiement" name="modePaiement" required>
                                    <option value="Espèces">Espèces</option>
                                    <option value="Carte bancaire">Carte bancaire</option>
                                    <option value="Chèque">Chèque</option>
                                </select>
                            </div>

                            <div class="col-md-4 text-end">
                                <h5 class="mb-0">Total à payer :</h5>
                                <div id="totalCommande" class="display-6 text-success fw-bold">0.00 DT</div>
                            </div>
                        </div>

                        <div class="mt-4 d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg py-3 shadow" id="btnValider">
                                <i class="fas fa-check-circle me-2"></i> Confirmer ma commande
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        {% endif %}

        <a href="{{ path('app_client_dashboard') }}" class="btn btn-outline-primary mb-5">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('commandeForm');
            const quantityInputs = document.querySelectorAll('.quantity-input');
            const recapitulatif = document.getElementById('recapitulatif');
            const totalElement = document.getElementById('totalCommande');
            const btnValider = document.getElementById('btnValider');

            function updateRecapitulatif() {
                let total = 0;
                let items = [];

                quantityInputs.forEach(input => {
                    const quantity = parseInt(input.value) || 0;
                    if (quantity > 0) {
                        const prix = parseFloat(input.dataset.prix);
                        const nom = input.dataset.nom;
                        const sousTotal = prix * quantity;
                        total += sousTotal;

                        items.push({ nom: nom, quantity: quantity, prix: prix, sousTotal: sousTotal });
                    }
                });

                if (items.length === 0) {
                    recapitulatif.innerHTML = '<p class="text-muted">Sélectionnez des plats pour voir le récapitulatif</p>';
                    btnValider.disabled = true;
                } else {
                    let html = '<table class="table table-sm table-borderless"><thead><tr class="text-muted small"><th>Plat</th><th>Qté</th><th class="text-end">Sous-total</th></tr></thead><tbody>';
                    items.forEach(item => {
                        html += `<tr><td>${item.nom}</td><td>x ${item.quantity}</td><td class="text-end fw-bold">${item.sousTotal.toFixed(2)} DT</td></tr>`;
                    });
                    html += '</tbody></table>';
                    recapitulatif.innerHTML = html;
                    btnValider.disabled = false;
                }
                totalElement.textContent = total.toFixed(2) + ' DT';
            }

            quantityInputs.forEach(input => {
                input.addEventListener('input', updateRecapitulatif);
            });

            form.addEventListener('submit', function(e) {
                const tableSelect = document.getElementById('tableId');
                if (!tableSelect.value) {
                    e.preventDefault();
                    alert('Veuillez sélectionner une table.');
                    return;
                }

                let hasItems = false;
                quantityInputs.forEach(input => {
                    if (parseInt(input.value) > 0) { hasItems = true; }
                });

                if (!hasItems) {
                    e.preventDefault();
                    alert('Veuillez sélectionner au moins un plat.');
                    return;
                }

                btnValider.disabled = true;
                btnValider.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> Envoi...';
            });

            updateRecapitulatif();
        });
    </script>
{% endblock %}
