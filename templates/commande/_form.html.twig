        border-color: var(--terracotta);
        box-shadow: 0 0 0 0.2rem rgba(193, 74, 58, 0.15);
    }

    .form-check-input:checked {
        background-color: var(--terracotta);
        border-color: var(--terracotta);
    }

    .form-label {
        font-weight: 500;
        color: var(--muted);
    }

    .btn-terracotta {
        background: var(--terracotta);
        border: none;
        color: white;
        transition: all 0.3s ease;
