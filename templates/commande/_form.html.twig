<div class="row justify-content-center">
    <div class="col-md-11 col-lg-10 col-xl-8">
        <div class="card shadow-lg border-0 rounded-5 overflow-hidden transition">
            <div class="card-header text-white text-center py-4" style="background: var(--terracotta);">
                <i class="bi bi-pencil-square fs-2 me-2"></i>
                <h2 class="h4 mb-0 fw-medium" style="font-family: 'Playfair Display', serif;">
                    {{ block('title') }}  {# RÃ©utilise le titre de la page #}
                </h2>
            </div>

            <div class="card-body p-5">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="row g-4">
                    {{ form_widget(form) }}  {# Tous les champs du formulaire #}
                </div>

                {{ form_errors(form) }}  {# Erreurs globales si besoin #}

                <div class="d-flex gap-3 justify-content-end mt-5">
                    <a href="javascript:history.back()" class="btn btn-outline-terracotta btn-lg flex-fill py-3 shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i>Annuler
                    </a>
                    <button type="submit" class="btn btn-terracotta btn-lg flex-fill py-3 shadow-sm">
                        <i class="bi bi-check-circle me-2"></i>
                        {{ button_label|default('Enregistrer') }}
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

