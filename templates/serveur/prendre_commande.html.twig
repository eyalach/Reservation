{% extends 'base.html.twig' %}

{% block title %}Prendre commande - Table {{ table.numero }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_serveur_dashboard') }}">Tableau de bord</a></li>
                <li class="breadcrumb-item active">Table {{ table.numero }}</li>
            </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Commande - Table {{ table.numero }}</h1>
            <span class="badge bg-info fs-5">{{ table.nbPlaces }} places</span>
        </div>

        <form action="{{ path('app_serveur_prendre_commande_valider', {id: table.id}) }}" method="post">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Menu disponible</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>Plat</th>
                            <th class="text-center">Prix</th>
                            <th class="text-center" style="width: 150px;">Quantité</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for plat in plats %}
                            <tr>
                                <td>
                                    <strong>{{ plat.nom }}</strong><br>
                                    <small class="text-muted">{{ plat.description|default('') }}</small>
                                </td>
                                <td class="text-center align-middle">
                                    {{ plat.prix|number_format(2, ',', ' ') }} €
                                </td>
                                <td class="text-center align-middle">
                                    <div class="input-group">
                                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="decrement({{ plat.id }})">-</button>
                                        <input type="number"
                                               name="plats[{{ plat.id }}]"
                                               id="qty_{{ plat.id }}"
                                               class="form-control form-control-sm text-center"
                                               value="0"
                                               min="0">
                                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="increment({{ plat.id }})">+</button>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center py-4">Aucun plat disponible pour le moment.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="card-footer bg-light d-flex justify-content-between align-items-center p-3">
                    <a href="{{ path('app_serveur_dashboard') }}" class="btn btn-secondary">Annuler</a>
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-check"></i> Valider la commande
                    </button>
                </div>
            </div>
        </form>
    </div>

    <script>
        // Fonctions simples pour faciliter la saisie sur tablette/mobile
        function increment(id) {
            const input = document.getElementById('qty_' + id);
            input.value = parseInt(input.value) + 1;
        }

        function decrement(id) {
            const input = document.getElementById('qty_' + id);
            if (parseInt(input.value) > 0) {
                input.value = parseInt(input.value) - 1;
            }
        }
    </script>
{% endblock %}
