{# templates/serveur/prendre_commande.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Prendre commande - Table {{ table.numero }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h1 class="h3 text-primary">Table {{ table.numero }} ({{ table.nbPlaces }} places)</h1>
            <p class="lead">Sélectionnez les plats et quantités</p>
        </div>

        <form method="post" action="{{ path('app_serveur_prendre_commande_valider', {id: table.id}) }}">
            {% if plats|length > 0 %}
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    {% for plat in plats %}
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <div class="bg-light border-bottom d-flex align-items-center justify-content-center" style="height: 180px;">
                                    <div class="text-center">
                                        <i class="fas fa-utensils fa-4x text-muted mb-2"></i>
                                        <p class="text-muted small mb-0">{{ plat.nom }}</p>
                                    </div>
                                </div>

                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">{{ plat.nom }}</h5>
                                    {% if plat.description %}
                                        <p class="card-text text-muted small">{{ plat.description }}</p>
                                    {% endif %}
                                    <p class="card-text fw-bold text-success mt-auto">{{ plat.prix }} DT</p>

                                    <div class="mt-3">
                                        <label for="quantite-{{ plat.id }}" class="form-label">Quantité</label>
                                        <input type="number"
                                               id="quantite-{{ plat.id }}"
                                               name="plats[{{ plat.id }}]"
                                               min="0"
                                               value="0"
                                               class="form-control text-center">
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-warning text-center">
                    Aucun plat disponible pour le moment.
                </div>
            {% endif %}


            <div class="text-center mt-4">
                <a href="{{ path('app_serveur_dashboard') }}" class="btn btn-secondary btn-lg me-3">
                    Annuler
                </a>
                <button type="submit" class="btn btn-success btn-lg px-5">
                    <i class="fas fa-check me-2"></i> Valider la commande
                </button>
            </div>
        </form>
    </div>
{% endblock %}
