{# templates/serveur/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Serveur - Tableau de bord{% endblock %}

{% block body %}
    {# Icône de déconnexion simple en haut à droite #}
    <div class="position-fixed" style="top: 15px; right: 20px; z-index: 1050;">
        <a href="{{ path('app_logout') }}"
           class="btn btn-danger rounded-circle shadow-sm"
           title="Se déconnecter">
            <i class="fas fa-power-off"></i>
        </a>
    </div>

    <div class="container mt-4">
        <h1 class="h2 mb-4 text-center text-primary">Gestion de la salle – Serveur</h1>

        <!-- État des tables -->
        <h3 class="mb-3">État des tables</h3>

        {# --- LA CORRECTION EST ICI : Ajout de la div class="row" --- #}
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-5">
            {% for table in tables %}
                <div class="col">
                    <div class="card text-center h-100 shadow-sm {{ table.estLibre ? 'border-success' : 'border-danger' }}">
                        <div class="card-header fw-bold fs-4 {{ table.estLibre ? 'bg-success text-white' : 'bg-danger text-white' }}">
                            Table {{ table.numero }}
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title mb-2">{{ table.nbPlaces }} places</h5>
                                <span class="badge fs-6 {{ table.estLibre ? 'bg-success' : 'bg-danger' }}">
                                    {{ table.estLibre ? 'Libre' : 'Occupée' }}
                                </span>
                            </div>

                            <div class="mt-4 d-grid gap-2">
                                {# Bouton pour prendre une commande (uniquement si libre) #}
                                {% if table.estLibre %}
                                    <a href="{{ path('app_serveur_prendre_commande_table', {id: table.id}) }}"
                                       class="btn btn-success btn-sm">Prendre commande</a>
                                {% endif %}

                                {# Bouton pour changer l'état manuellement #}
                                <form method="post" action="{{ path('app_serveur_table_toggle_statut', {id: table.id}) }}">
                                    <button type="submit" class="btn {{ table.estLibre ? 'btn-outline-danger' : 'btn-outline-success' }} btn-sm w-100">
                                        <i class="fas fa-sync-alt me-1"></i>
                                        Marquer comme {{ table.estLibre ? 'Occupée' : 'Libre' }}
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center py-5">
                    <div class="alert alert-info">Aucune table configurée.</div>
                </div>
            {% endfor %}
        </div> {# --- FIN DU ROW --- #}

        <hr class="my-5">

        <!-- Commandes en cours -->
        <h3 class="mb-3">Commandes en cours</h3>
        {% if commandesEnCours|length > 0 %}
            <div class="list-group mb-4 shadow-sm">
                {% for commande in commandesEnCours %}
                    <a href="{{ path('app_serveur_commandes_en_cours') }}" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <h5 class="mb-1">
                                {% if commande.tableCommande %}
                                    <span class="badge bg-primary me-2">Table {{ commande.tableCommande.numero }}</span>
                                {% else %}
                                    <span class="badge bg-secondary me-2">Sans Table</span>
                                {% endif %}
                                Commande #{{ commande.id }}
                            </h5>
                            <small class="text-muted"><i class="far fa-clock"></i> {{ commande.date ? commande.date|date('H:i') : 'Inconnue' }}</small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mt-2">
                            <span>Statut: <strong class="text-info">{{ commande.status.value|upper }}</strong></span>
                            <span class="badge bg-light text-dark border">{{ commande.ligneCommandes|length }} article(s)</span>
                        </div>
                    </a>
                {% endfor %}
            </div>
            <div class="text-center">
                <a href="{{ path('app_serveur_commandes_en_cours') }}" class="btn btn-primary">
                    Voir les détails des préparations
                </a>
            </div>
        {% else %}
            <div class="alert alert-info text-center">
                Aucune commande en cours pour le moment.
            </div>
        {% endif %}
    </div>
{% endblock %}
