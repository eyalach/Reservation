{# templates/serveur/commandes_en_cours.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Commandes en cours{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100 py-5"
         style="background: linear-gradient(rgba(250, 249, 246, 0.94), rgba(250, 249, 246, 0.94)),
            url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80') center/cover no-repeat;
            background-attachment: fixed;">
        <div class="container">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-light" style="font-family: 'Playfair Display', serif; color: #333;">
                    Commandes en cours
                </h1>
                <p class="lead text-muted" style="font-family: 'Montserrat', sans-serif; letter-spacing: 1px;">
                    Suivi des commandes en cuisine
                </p>
            </div>

            {% if commandes|length > 0 %}
                <div class="row g-5">
                    {% for commande in commandes %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card shadow-lg border-0 rounded-5 h-100 overflow-hidden transition
                            {% if commande.status.value == 'EN_COURS' %}border-warning border-4
                            {% elseif commande.status.value == 'PRETE' %}border-success border-4
                            {% else %}border-secondary border-3{% endif %}">

                                <div class="card-header text-white text-center py-4
                                {% if commande.status.value == 'EN_COURS' %}bg-warning text-dark
                                {% elseif commande.status.value == 'PRETE' %}bg-olive
                                {% else %}bg-secondary{% endif %}">
                                    <h3 class="h5 mb-2 fw-semibold">
                                        {% if commande.tableCommande is not null %}
                                            Table {{ commande.tableCommande.numero }}
                                        {% else %}
                                            <span class="text-danger">Sans table</span>
                                        {% endif %}
                                    </h3>
                                    <span class="badge rounded-pill px-4 py-2 fs-6 bg-white text-dark">
                                    {{ commande.status.value|replace({'_': ' '})|title }}
                                </span>
                                </div>

                                <div class="card-body p-4 d-flex flex-column">
                                    <div class="mb-4">
                                        <p class="mb-2"><strong>Heure :</strong> {{ commande.date|date('H:i') }}</p>
                                        <p class="mb-0 fs-5 fw-bold text-olive">
                                            Total : {{ commande.total|number_format(2, ',', ' ') }} DT
                                        </p>
                                    </div>

                                    <hr class="my-4">

                                    <h6 class="fw-semibold mb-3 text-terracotta">
                                        <i class="bi bi-list-ul me-2"></i>Détail de la commande
                                    </h6>
                                    <ul class="list-group list-group-flush flex-grow-1">
                                        {% for ligne in commande.ligneCommandes %}
                                            <li class="list-group-item bg-transparent d-flex justify-content-between align-items-center py-3">
                                                <div>
                                                    <strong>{{ ligne.quantite }} × {{ ligne.plat.nom }}</strong>
                                                </div>
                                                <span class="fw-bold text-olive">
                                                {{ (ligne.prixUnitaire * ligne.quantite)|number_format(2, ',', ' ') }} DT
                                            </span>
                                            </li>
                                        {% endfor %}
                                    </ul>

                                    <div class="mt-auto text-center pt-4">
                                        {% if commande.status.value == 'EN_COURS' %}
                                            <form method="post" action="{{ path('app_serveur_commande_changer_statut', {id: commande.id, nouveauStatut: 'prete'}) }}"
                                                  class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('statut' ~ commande.id) }}">
                                                <button type="submit" class="btn btn-warning btn-lg px-5 shadow-sm">
                                                    <i class="bi bi-clock me-2"></i>Marquer comme Prête
                                                </button>
                                            </form>
                                        {% elseif commande.status.value == 'PRETE' %}
                                            <form method="post" action="{{ path('app_serveur_commande_changer_statut', {id: commande.id, nouveauStatut: 'servie'}) }}"
                                                  class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('statut' ~ commande.id) }}">
                                                <button type="submit" class="btn btn-olive btn-lg px-5 shadow-sm">
                                                    <i class="bi bi-check-circle me-2"></i>Marquer comme Servie
                                                </button>
                                            </form>
                                        {% elseif commande.status.value == 'SERVIE' %}
                                            <div class="text-success fw-bold fs-4">
                                                <i class="bi bi-check2-all me-3"></i>Commande servie
                                            </div>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-5">
                    <div class="card shadow-sm border-0 rounded-5 py-5">
                        <i class="bi bi-check-circle fs-1 text-success mb-4 opacity-75"></i>
                        <h3 class="h4 fw-semibold">Aucune commande en cours</h3>
                        <p class="text-muted">Les nouvelles commandes apparaîtront ici dès qu'elles seront prises.</p>
                    </div>
                </div>
            {% endif %}

            <div class="text-center mt-5">
                <a href="{{ path('app_serveur_dashboard') }}" class="btn btn-terracotta btn-lg px-5 shadow-sm">
                    <i class="bi bi-house-door me-2"></i>Retour au tableau de bord
                </a>
            </div>
        </div>
    </div>

    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .text-terracotta { color: var(--terracotta); }
        .text-olive { color: var(--olive); }
        .bg-olive { background-color: var(--olive); }

        .btn-olive {
            background: var(--olive);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-olive:hover {
            background: #58701d;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(107, 142, 35, 0.3);
        }

        .btn-terracotta {
            background: var(--terracotta);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-terracotta:hover {
            background: #a83a2b;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(193, 74, 58, 0.3);
        }

        .card {
            background: white;
            transition: transform 0.4s ease, box-shadow 0.4s ease;
        }
        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.08);
        }

        .list-group-item {
            background: transparent;
            border: none;
        }

        .rounded-5 { border-radius: 1.5rem; }

        .transition { transition: all 0.3s ease; }
    </style>
{% endblock %}
