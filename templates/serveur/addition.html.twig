{# templates/serveur/addition.html.twig #}
{% raw %}
    {% extends 'base.html.twig' %}
    {% block title %}Addition Table {{ commande.table.numero }}{% endblock %}
    {% block body %}
    <div class="text-center">
        <h1>Addition – Table {{ commande.table.numero }}</h1>
        <table class="table table-striped">
            <thead><tr><th>Plat</th><th>Qté</th><th>Prix</th><th>Total</th></tr></thead>
            <tbody>
            {% for ligne in commande.lignes %}
            <tr>
                <td>{{ ligne.plat.nom }}</td>
                <td>{{ ligne.quantite }}</td>
                <td>{{ ligne.plat.prix }} €</td>
                <td>{{ ligne.quantite * ligne.plat.prix }} €</td>
            </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr class="table-success">
                <th colspan="3">TOTAL</th>
                <th>{{ commande.total }} €</th>
            </tr>
            </tfoot>
        </table>
        <a href="#" class="btn btn-success btn-lg">Encaisser</a>
        <button onclick="window.print()" class="btn btn-secondary btn-lg">Imprimer</button>
    </div>
    {% endblock %}
{% endraw %}
