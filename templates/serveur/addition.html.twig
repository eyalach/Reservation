{# templates/serveur/addition.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Addition ‚Äì Table {{ commande.table.numero }}{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
{% endblock %}

{% block body %}
    <div class="container-fluid min-vh-100 py-5"
         style="background: linear-gradient(rgba(250, 249, 246, 0.94), rgba(250, 249, 246, 0.94)),
            url('https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?ixlib=rb-4.0.3&auto=format&fit=crop&w=2340&q=80') center/cover no-repeat;
            background-attachment: fixed;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10 col-xl-8">
                    <div class="card shadow-lg border-0 rounded-5 overflow-hidden transition">
                        <div class="card-header text-white text-center py-5" style="background: var(--terracotta);">
                            <h1 class="display-6 fw-light mb-0" style="font-family: 'Playfair Display', serif;">
                                <i class="bi bi-receipt fs-1 me-3"></i>
                                Addition ‚Äì Table {{ commande.table.numero }}
                            </h1>
                        </div>

                        <div class="card-body p-5">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-light">
                                    <tr>
                                        <th>Plat</th>
                                        <th class="text-center">Qt√©</th>
                                        <th class="text-end">Prix unitaire</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for ligne in commande.lignes %}
                                        <tr>
                                            <td>
                                                <strong>{{ ligne.plat.nom }}</strong>
                                                {% if ligne.plat.description %}
                                                    <br><small class="text-muted">{{ ligne.plat.description }}</small>
                                                {% endif %}
                                            </td>
                                            <td class="text-center fw-medium">{{ ligne.quantite }}</td>
                                            <td class="text-end">{{ ligne.plat.prix|number_format(2, ',', ' ') }} DT</td>
                                            <td class="text-end fw-bold text-olive">
                                                {{ (ligne.quantite * ligne.plat.prix)|number_format(2, ',', ' ') }} DT
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4" class="text-center text-muted py-5">
                                                <i class="bi bi-basket fs-1 mb-3 opacity-50"></i><br>
                                                Aucune commande enregistr√©e
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr class="table-light fw-bold fs-4">
                                        <td colspan="3" class="text-end pt-4">TOTAL √Ä PAYER</td>
                                        <td class="text-end pt-4 text-olive">
                                            {{ commande.total|number_format(2, ',', ' ') }} DT
                                        </td>
                                    </tr>
                                    </tfoot>
                                </table>
                            </div>

                            <div class="text-center mt-5">
                                <div class="d-grid d-md-flex justify-content-center gap-4">
                                    <a href="#" class="btn btn-olive btn-lg px-5 py-3 shadow-sm">
                                        <i class="bi bi-cash-coin me-2"></i>Encaisser
                                    </a>
                                    <button onclick="window.print()" class="btn btn-outline-terracotta btn-lg px-5 py-3 shadow-sm">
                                        <i class="bi bi-printer me-2"></i>Imprimer l'addition
                                    </button>
                                </div>
                            </div>

                            <div class="text-center mt-5 text-muted fst-italic">
                                Merci pour votre visite ! √Ä bient√¥t au D√©lice üçΩÔ∏è
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        :root {
            --terracotta: #C14A3A;
            --olive: #6B8E23;
            --gold: #D4AF37;
            --text: #333333;
            --muted: #666666;
            --bg: #FAF9F6;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            color: var(--text);
            background-color: var(--bg);
        }

        .text-olive { color: var(--olive); }

        .btn-olive {
            background: var(--olive);
            border: none;
            color: white;
            transition: all 0.3s ease;
        }
        .btn-olive:hover {
            background: #58701d;
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(107, 142, 35, 0.3);
        }

        .btn-outline-terracotta {
            border: 2px solid var(--terracotta);
            color: var(--terracotta);
            transition: all 0.3s ease;
        }
        .btn-outline-terracotta:hover {
            background: var(--terracotta);
            color: white;
        }

        .card {
            background: white;
            transition: transform 0.4s ease;
        }
        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.08);
        }

        .table th {
            font-weight: 500;
            color: var(--muted);
            letter-spacing: 0.5px;
        }

        .rounded-5 { border-radius: 1.5rem; }

        .transition { transition: all 0.3s ease; }

        /* Optimisation impression */
        @media print {
            body, .container-fluid { background: white !important; }
            .card { box-shadow: none !important; border: 2px solid #000; }
            .card-header { background: white !important; color: #000 !important; border-bottom: 3px double #000; }
            .btn { display: none !important; }
            .text-muted { color: #000 !important; }
            .table { border-collapse: collapse; }
            .table th, .table td { border: 1px solid #000; padding: 12px; }
            .table tfoot td { border-top: 3px double #000; font-size: 1.5rem; }
        }
    </style>
{% endblock %}
